@model List<Category>

<head>
    <meta charset="utf-8" />
    <title>World Travel Forum - Home</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

    <div class="body-content">
        <h2><img src="~/images/WTF.jpg" style="width:50px;height:40px;">WELCOME TO WORLD FORUM TRAVEL</h2>
    </div>

   
        <h2>Categories</h2>

        <div class="table">
            <div class="header">
                <div class="header-cell">Name</div>
                <div class="header-cell">Description</div>
                <div class="header-cell">Posts</div>
                <div class="header-cell">Comments</div>
               
            </div>

            @{
            foreach (var category in this.Model)
            {
            <div class="row">
            <div class="cell">@category.Name</div>
            <div class="cell">@category.Description</div>
            <div class="cell">@category.CountPosts</div>
            <div class="cell">@category.CountComment</div>
            <div class="cell">
                    <a asp-controller="Posts" asp-action="Index" asp-route-id="@category.Id" class="btn btn-primary"> Posts </a>
                    | <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning"> Edit </a>
                    | <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"> Delete </a>
            </div>
            </div>
            }
            }
    </div>
     <div>
    </br>
    <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">ADD NEW CATEGORY</a>
    </div>