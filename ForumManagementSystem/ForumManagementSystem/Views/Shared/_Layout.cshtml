@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject AuthManager authManager;
﻿@using ForumManagementSystem.Models
@using Presentation.Helpers;
@{
    var isLogged = Context.Session.Keys.Contains("LoggedUser");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@this.ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div>
            <h3>
                <!-- using tag helpers -->
                <a asp-controller="Home" asp-action="Index" class="nav">Home</a>
                | <a asp-controller="Users" asp-action="Index" class="nav">Users</a>
                | <a asp-controller="Home" asp-action="Index" class="nav">Categories</a>
                | <a asp-controller="Posts" asp-action="Index" class="nav">Posts</a>
                | <a href="/swagger/index.html" class="nav">Developer API</a>|

                @if (isLogged)
                {
                   <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-danger">LOG OUT</a>
                }
                 else
                {
                   <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-success">LOG IN</a>
                }
                
                @if (!isLogged)
                {
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-success">REGISTER</a>
                }

            </h3>
        </div>
        </header>
    <div class="body-content">
        @RenderBody()
    </div>
    <footer>
        <small>© Copyright @DateTime.Now.Year, World Travel Forum</small>
    </footer>
</body>
</html>

