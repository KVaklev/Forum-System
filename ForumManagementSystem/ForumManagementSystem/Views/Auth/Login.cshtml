@model LoginViewModel

@{
	this.ViewData["Title"] = "World Travel Forum - Login";
}

<body>
	<h2>Login</h2>

	@{
		if (ViewData["ErrorMessage"] != null)
		{
			<h3><p class="text-danger">@ViewData["ErrorMessage"]</p></h3>
		}
	}
	
	<form asp-controller="Auth" asp-action="Login" method="post">

		<label asp-for="Username" class="form-label"></label>
		<br/>
		<input asp-for="Username" type="text" class="form-input" />
		<br />
		<span asp-validation-for="Username" class="text-danger"></span>
		
		<label asp-for="Password" class="form-label"></label>
		<br/>
		<input asp-for="Password" type="password" class="form-input" />
		<br />
		<span asp-validation-for="Password" class="text-danger"></span>
		
		<input type="submit" value="Login" class="btn btn-primary" />
		<a asp-controller="Auth" asp-action="Register" class="btn btn-secondary">Register</a>
	</form>

</body>
