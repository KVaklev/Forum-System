@model List<CommentGetViewModel>



@{
    this.ViewData["Title"] = "World Travel Forum";
}

@*<h2>@post.Title</h2>
<div>@post.Content</div>*@
</br>
<div class="table">
    <div class="header">
        <div class="header-cell">Username</div>
        <div class="header-cell">Content</div>
        <div class="header-cell">DateTime</div>
        <div class="header-cell">Likes</div>
        <div class="header-cell">Actions</div>

    </div>

    @{
        foreach (var comment in this.Model)
        {
            <div class="row">
                <div class="cell">@comment.Username</div>
                <div class="cell">@comment.Content</div>
                <div class="cell">@comment.DateTime</div>
                <div class="cell">@comment.LikesCount</div>
                <div class="cell">
                    <a asp-controller="Comment" asp-action="Like" class="btn btn-warning">Like</a>
                    | <a asp-controller="Comment" asp-action="Create"  class="btn btn-primary"> Replay </a>
                    | <a asp-controller="Comment" asp-action="Edit"  class="btn btn-warning"> Edit </a>
                    | <a asp-controller="Comment" asp-action="Delete"  class="btn btn-danger"> Delete </a>
                </div>
            </div>
        }
    }
</div>
