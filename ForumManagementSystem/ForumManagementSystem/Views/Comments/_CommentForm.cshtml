@model CommentViewModel

<form asp-controller="Comments" asp-action="@this.ViewData["Action"]" method="post">

	    <label asp-for="Content" class="form-label"></label>
		<br />
	    <input asp-for="Content" type="text" style="width: 600px; height: 100px;" />
		<br />
		<span asp-validation-for="Content" class="form-error"></span>
	    <br />
	<input type="submit" value="@this.ViewData["ButtonText"]" class="btn btn-warning" />
	<a asp-controller="Posts" asp-action="Index" class="btn btn-primary">Back</a>
</form>