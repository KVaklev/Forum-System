@model CommentViewModel

<head>
	<meta charset="utf-8" />
	<title>Edit a comment</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>

@{
	this.ViewData["Action"] = "Edit";
	this.ViewData["ButtonText"] = "Save";
	this.ViewData["NameVisibility"] = "name-visible";
}
<body>
	<h2>Edit a comment</h2>
	@{
		if (ViewData["ErrorMessage"] != null)
		{
					<h3><p class="text-danger">@ViewData["ErrorMessage"]</p></h3>
		}
	}
	
	<partial name="_CommentForm" />
</body>
