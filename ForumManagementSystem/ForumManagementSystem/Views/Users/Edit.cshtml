@model UserEditViewModel

@{
	this.ViewData["Title"] = "World Travel Forum - Edit User";
}

<h2>Edit information</h2>

<body>
	<form asp-controller="Users" asp-action="Edit" method="post">

	<label asp-for="FirstName" class="form-label"></label>
	<br />
