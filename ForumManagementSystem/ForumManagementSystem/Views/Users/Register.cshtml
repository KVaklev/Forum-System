@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Business.ViewModels.Models;
@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>New Registration</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<div>
			<h3>
				<a asp-controller="Home" asp-action="Index" class="nav">Home</a>
				<a asp-controller="Users" asp-action="Index" class="nav">Users</a>
				<a asp-controller="Home" asp-action="About" class="nav">About</a>
				<a href="/api/swagger" class="nav">Developer API</a>
			</h3>
		</div>
	</header>
	<h2>Registration form</h2>
	@{
		if (ViewData["ErrorMessage"] != null)
		{
			<h3><p>@ViewData["ErrorMessage"]</p></h3>
		}
	}
	<form asp-controller="Users" asp-action="Register" method="post">
		<label asp-for="FirstName" class="form-label"></label>
		<br />
		<input asp-for="FirstName" type="text" class="form-input" />
		<br />
		<span asp-validation-for="FirstName" class="form-error"></span>

		<label asp-for="LastName" class="form-label"></label>
		<br />
		<input asp-for="LastName" type="text" class="form-input" />
		<br />
		<span asp-validation-for="LastName" class="form-error"></span>

		<label asp-for="PhoneNumber" class="form-label"></label>
		<br />
		<input asp-for="PhoneNumber" type="number" class="form-input" />
		<br />
		<span asp-validation-for="PhoneNumber" class="form-error"></span>

		<label asp-for="Username" class="form-label"></label>
		<br />
		<input asp-for="Username" type="text" class="form-input" />
		<br />
		<span asp-validation-for="Username" class="form-error"></span>

		<label asp-for="Email" class="form-label"></label>
		<br />
		<input asp-for="Email" type="text" class="form-input" />
		<br />
		<span asp-validation-for="Email" class="form-error"></span>

		<label asp-for="Password" class="form-label"></label>
		<br />
		<input asp-for="Password" type="text" class="form-input" />
		<br />
		<span asp-validation-for="Password" class="form-error"></span>

		<label asp-for="ConfirmPassword" class="form-label"></label>
		<br />
		<input asp-for="ConfirmPassword" type="text" class="form-input" />
		<br />
		<span asp-validation-for="ConfirmPassword" class="form-error"></span>

		<input type="submit" value="Register" class="btn-primary" />
		<a asp-controller="Users" asp-action="Login" class="btn btn-secondary">Login</a>
	</form>
	<footer>
		<small>© Copyright @DateTime.Now.Year, Users</small>
	</footer>
</body>
</html>


