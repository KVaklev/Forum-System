@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ForumManagementSystem.Models
@model List<User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Users</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div>
            <h3>
                <a asp-controller="Home" asp-action="Index" class="nav">Home</a>
                | <a asp-controller="Users" asp-action="Index" class="nav">Users</a>
                | <a asp-controller="Home" asp-action="About" class="nav">About</a>
                | <a href="/swagger/index.html" class="nav">Developer API</a>
            </h3>
        </div>
    </header>

    <div class="body-content">
        <h2>Users</h2>
        <h3><a asp-controller="Users" asp-action="Create" class="nav">Make a new registration</a></h3>
        
        <div class="table">
            <div class="header">
                <div class="header-cell">Firstname</div>
                <div class="header-cell">Lastname</div>
                <div class="header-cell">Email</div>
                <div class="header-cell">Username</div>
            </div>

            @{
                foreach (var user in this.Model)
                {
                    <div class="row">
                        <div class="cell">@user.FirstName</div>
                        <div class="cell">@user.LastName</div>
                        <div class="cell">@user.Email</div>
                        <div class="cell">@user.Username</div>
                        <div class="cell">
                        <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">Details</a>
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <footer>
        <small>© Copyright @DateTime.Now.Year, Users</small>
    </footer>
</body>
</html>