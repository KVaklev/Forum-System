@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ForumManagementSystem.Models
@model User

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>Delete</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<div>
			<h3>
				<a asp-controller="Home" asp-action="Index" class="nav">Home</a>
				<a asp-controller="Users" asp-action="Index" class="nav">Users</a>
				<a asp-controller="Home" asp-action="About" class="nav">About</a>
				<a href="/api/swagger" class="nav">Developer API</a>
			</h3>
		</div>
	</header>
	<div class="body-content">
		<h2>Delete <b>@this.Model.Username</b>?</h2>

	<form asp-controller="Users" asp-action="Delete" method="post">
		<input type="submit" value="Delete" class="btn-danger" />
	</form>
		<a asp-controller="Users" asp-action="Index" class="nav">Back</a>
		</div>

	<footer>
		<small>© Copyright @DateTime.Now.Year, Users</small>
	</footer>
</body>
</html>


